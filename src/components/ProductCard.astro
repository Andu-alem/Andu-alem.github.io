---
import { Image } from "astro:assets"
const { project: {
    image,
    title,
    subTitle,
    description,
    link,
    features
} } = Astro.props
---

<div class="flex flex-col sm:flex-row gap-4 min-h-[55vh] my-3">
    <Image
        src={ image }
        alt="project-screen-shoot"
        class="w-full sm:w-[50%] min-h-[50vh] rounded-lg" />
    <div class="w-full sm:w-[50%] tracking-wider">
        <h2 class="text-lg font-semibold">
            { title } - <span class="text-xs">{ subTitle }</span>
        </h2>
        <p class="text-xs my-2">{ description }</p>
        <p class="text-xs my-2">
            <strong>Key Features: </strong> { features }
        </p>
        <a class="btn btn-link text-xs" href={ link } target="_blank">Live Link</a>
    </div>
</div>