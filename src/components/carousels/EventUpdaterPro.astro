---
import { Image } from "astro:assets"
import eventShoot from "../../assets/eventupdater/event_shot.jpg"
import eventShoot2 from "../../assets/eventupdater/e.jpg"
---
<div class="carousel w-full h-[55vh] rounded-xl">
    <div id="event-slide1" class="carousel-item relative w-full">
      <Image
        alt="project-screen-shoot"
        src={ eventShoot }
        class="w-full h-full" />
      <div class="absolute left-5 right-5 top-1/2 flex -translate-y-1/2 transform justify-between">
        <a href="#event-slide2" class="btn btn-circle">❮</a>
        <a href="#event-slide2" class="btn btn-circle">❯</a>
      </div>
    </div>
    <div id="event-slide2" class="carousel-item relative w-full">
      <Image
        alt="project-screen-shoot"
        src={ eventShoot2 }
        class="w-full h-full" />
      <div class="absolute left-5 right-5 top-1/2 flex -translate-y-1/2 transform justify-between">
        <a href="#event-slide1" class="btn btn-circle">❮</a>
        <a href="#event-slide1" class="btn btn-circle">❯</a>
      </div>
    </div>
</div>