---
import { Image } from "astro:assets"
import serviceadImg from "../../assets/servicead/sevicead.png"
import serviceadImg2 from "../../assets/servicead/servicead-shot.jpg"
import serviceadImg3 from "../../assets/servicead/detail.png"

---
<div class="carousel w-full h-[55vh] rounded-xl">
    <div id="servicead-slide1" class="carousel-item relative w-full">
      <Image
        alt="project-screen-shoot"
        src={ serviceadImg }
        class="w-full h-full" />
      <div class="absolute left-5 right-5 top-1/2 flex -translate-y-1/2 transform justify-between">
        <a href="#servicead-slide3" class="btn btn-circle">❮</a>
        <a href="#servicead-slide2" class="btn btn-circle">❯</a>
      </div>
    </div>
    <div id="servicead-slide2" class="carousel-item relative w-full">
      <Image
        alt="project-screen-shoot"
        src={ serviceadImg2 }
        class="w-full h-full" />
      <div class="absolute left-5 right-5 top-1/2 flex -translate-y-1/2 transform justify-between">
        <a href="#servicead-slide1" class="btn btn-circle">❮</a>
        <a href="#servicead-slide3" class="btn btn-circle">❯</a>
      </div>
    </div>
    <div id="servicead-slide3" class="carousel-item relative w-full">
      <Image
        alt="project-screen-shoot"
        src={ serviceadImg3 }
        class="w-full h-full" />
      <div class="absolute left-5 right-5 top-1/2 flex -translate-y-1/2 transform justify-between">
        <a href="#servicead-slide2" class="btn btn-circle">❮</a>
        <a href="#servicead-slide1" class="btn btn-circle">❯</a>
      </div>
    </div>
</div>