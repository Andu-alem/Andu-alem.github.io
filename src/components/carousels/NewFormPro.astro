---
import { Image } from "astro:assets"
import newformImg from "../../assets/newform/newform1.jpg"
import heroImg from "../../assets/newform/hero.png"
import featureImg from "../../assets/newform/feature.png"
import productsImg from "../../assets/newform/products.png"
import footerImg from "../../assets/newform/footer.png"
---
<div class="carousel w-full h-[55vh] rounded-xl">
    <div id="newform-slide1" class="carousel-item relative w-full">
      <Image
        alt="project-screen-shoot"
        src={ newformImg }
        class="w-full h-full" />
      <div class="absolute left-5 right-5 top-1/2 flex -translate-y-1/2 transform justify-between">
        <a href="#newform-slide5" class="btn btn-circle">❮</a>
        <a href="#newform-slide2" class="btn btn-circle">❯</a>
      </div>
    </div>
    <div id="newform-slide2" class="carousel-item relative w-full">
      <Image
        alt="project-screen-shoot"
        src={ heroImg }
        class="w-full h-full" />
      <div class="absolute left-5 right-5 top-1/2 flex -translate-y-1/2 transform justify-between">
        <a href="#newform-slide1" class="btn btn-circle">❮</a>
        <a href="#newform-slide3" class="btn btn-circle">❯</a>
      </div>
    </div>
    <div id="newform-slide3" class="carousel-item relative w-full">
      <Image
        alt="project-screen-shoot"
        src={ featureImg }
        class="w-full h-full" />
      <div class="absolute left-5 right-5 top-1/2 flex -translate-y-1/2 transform justify-between">
        <a href="#newform-slide2" class="btn btn-circle">❮</a>
        <a href="#newform-slide4" class="btn btn-circle">❯</a>
      </div>
    </div>
    <div id="newform-slide4" class="carousel-item relative w-full">
      <Image
        alt="project-screen-shoot"
        src={ productsImg }
        class="w-full h-full" />
      <div class="absolute left-5 right-5 top-1/2 flex -translate-y-1/2 transform justify-between">
        <a href="#newform-slide3" class="btn btn-circle">❮</a>
        <a href="#newform-slide5" class="btn btn-circle">❯</a>
      </div>
    </div>
    <div id="newform-slide5" class="carousel-item relative w-full">
      <Image
        alt="project-screen-shoot"
        src={ footerImg }
        class="w-full h-full" />
      <div class="absolute left-5 right-5 top-1/2 flex -translate-y-1/2 transform justify-between">
        <a href="#newform-slide4" class="btn btn-circle">❮</a>
        <a href="#newform-slide1" class="btn btn-circle">❯</a>
      </div>
    </div>
</div>