---
import { Image } from "astro:assets"
import SidebarFooter from "./SidebarFooter.astro"
import SideBarMenu from "./SideBarMenu.astro"

---
<div class="drawer-side z-40 min-h-screen">
    <label for="my-drawer" class="drawer-overlay"></label>
    <aside class="px-2 pt-2 h-auto min-h-full w-[19rem] bg-base-200 text-base-content flex flex-col">
        <div class="h-[87%] overflow-y-auto">
            <div class="w-fit mx-auto mt-5 mb-6">
                <a href="/">
                <div class="avatar transition ease-in-out hover:scale-[102%] block m-auto">
                    <div class="w-[8.5rem] ring-primary ring-offset-base-100 rounded-full ring ring-offset-2">
                        <Image class="mask mask-circle" format="png" width={300} height={300} src="/andi_profile.png" alt="Profile image" fetchpriority="high" />
                    </div>
                  </div>
                </a>
            </div>
            <SideBarMenu />
        </div>
        <SidebarFooter />
    </aside>
</div>